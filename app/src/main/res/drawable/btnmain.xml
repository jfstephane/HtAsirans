<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3363B0"/>
            <stroke
                android:width="2.3dp"
                android:color="#d3d3d3" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="3dp"
                android:color="#3363B0" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>